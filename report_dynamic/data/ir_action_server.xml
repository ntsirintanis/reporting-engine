<odoo noupdate="True">

    <!-- Wizard server action -->
    <record id="report_dynamic_wizard" model="ir.actions.server">
        <field name="name">Do Action</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_mass_report_wizard" />
         <field name="state">code</field>
         <field name="code">
             if records:
                 action = env["mass.report.wizard"].create_report(records)
        </field>
        <field name="binding_model_id" ref="model_report_dynamic" />
    </record>

</odoo>
